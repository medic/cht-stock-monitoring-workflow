<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Edit Supervision Area</h:title>
    <model>
      <itext>
        <translation lang="en">
          <text id="/data/c50_supervision_area/contact/_id:label">
            <value>Primary Contact</value>
          </text>
          <text id="/data/c50_supervision_area/name:label">
            <value>Name of this Supervision area</value>
          </text>
        </translation>
        <translation lang="fr">
          <text id="/data/c50_supervision_area/contact/_id:label">
            <value>Contact primaire</value>
          </text>
          <text id="/data/c50_supervision_area/meta/created_by:label">
            <value>-</value>
          </text>
          <text id="/data/c50_supervision_area/meta/created_by_person_uuid:label">
            <value>-</value>
          </text>
          <text id="/data/c50_supervision_area/meta/created_by_place_uuid:label">
            <value>-</value>
          </text>
          <text id="/data/c50_supervision_area/meta:label">
            <value>-</value>
          </text>
          <text id="/data/c50_supervision_area/name:label">
            <value>Nom de la zone de supervision</value>
          </text>
          <text id="/data/c50_supervision_area/parent:label">
            <value>-</value>
          </text>
          <text id="/data/c50_supervision_area/type:label">
            <value>-</value>
          </text>
          <text id="/data/c50_supervision_area:label">
            <value>-</value>
          </text>
          <text id="/data/inputs/user/contact_id:label">
            <value>-</value>
          </text>
          <text id="/data/inputs/user/facility_id:label">
            <value>-</value>
          </text>
          <text id="/data/inputs/user/name:label">
            <value>-</value>
          </text>
          <text id="/data/inputs/user:label">
            <value>-</value>
          </text>
          <text id="/data/inputs:label">
            <value>-</value>
          </text>
        </translation>
      </itext>
      <instance>
        <data delimiter="#" id="contact:c50_supervision_area:edit" prefix="J1!contact:c50_supervision_area:edit!" version="2022-05-06 12-38">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <user>
              <contact_id/>
              <facility_id/>
              <name/>
            </user>
          </inputs>
          <c50_supervision_area>
            <parent/>
            <type/>
            <contact>
              <name/>
              <contact_name/>
              <_id/>
            </contact>
            <name/>
            <geolocation/>
            <meta tag="hidden">
              <created_by/>
              <created_by_person_uuid/>
              <created_by_place_uuid/>
              <last_edited_by/>
              <last_edited_by_person_uuid/>
              <last_edited_by_place_uuid/>
            </meta>
          </c50_supervision_area>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </data>
      </instance>
      <bind nodeset="/data/inputs" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/c50_supervision_area/parent" readonly="true()" type="string"/>
      <bind nodeset="/data/c50_supervision_area/type" readonly="true()" type="string"/>
      <bind nodeset="/data/c50_supervision_area/contact/name" readonly="true()" type="string"/>
      <bind calculate="../name" nodeset="/data/c50_supervision_area/contact/contact_name" type="string"/>
      <bind nodeset="/data/c50_supervision_area/contact/_id" required="true()" type="string"/>
      <bind nodeset="/data/c50_supervision_area/name" required="true()" type="string"/>
      <bind calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))" nodeset="/data/c50_supervision_area/geolocation" type="string"/>
      <bind nodeset="/data/c50_supervision_area/meta/created_by" readonly="true()" type="string"/>
      <bind nodeset="/data/c50_supervision_area/meta/created_by_person_uuid" readonly="true()" type="string"/>
      <bind nodeset="/data/c50_supervision_area/meta/created_by_place_uuid" type="string"/>
      <bind calculate="../../../inputs/user/name" nodeset="/data/c50_supervision_area/meta/last_edited_by" type="string"/>
      <bind calculate="../../../inputs/user/contact_id" nodeset="/data/c50_supervision_area/meta/last_edited_by_person_uuid" type="string"/>
      <bind calculate="../../../inputs/user/facility_id" nodeset="/data/c50_supervision_area/meta/last_edited_by_place_uuid" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <group ref="/data/inputs">
      <group ref="/data/inputs/user">
        <input ref="/data/inputs/user/contact_id"/>
        <input ref="/data/inputs/user/facility_id"/>
        <input ref="/data/inputs/user/name"/>
      </group>
    </group>
    <group appearance="field-list" ref="/data/c50_supervision_area">
      <group ref="/data/c50_supervision_area/contact">
        <input appearance="select-contact type-c52_supervisor" ref="/data/c50_supervision_area/contact/_id">
          <label ref="jr:itext('/data/c50_supervision_area/contact/_id:label')"/>
        </input>
      </group>
      <input ref="/data/c50_supervision_area/name">
        <label ref="jr:itext('/data/c50_supervision_area/name:label')"/>
      </input>
      <group appearance="hidden" ref="/data/c50_supervision_area/meta"/>
    </group>
  </h:body>
</h:html>
